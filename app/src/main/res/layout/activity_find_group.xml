<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".FindGroup">

    <Button
        android:id="@+id/buttonEngineering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Faculty of Engineering" />

    <Button
        android:id="@+id/buttonMedicine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Faculty of Medicine" />

    <Button
        android:id="@+id/buttonNatural"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Faculty of Natural Sciences" />

    <Button
        android:id="@+id/buttonBusiness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Imperial College Business School" />
</LinearLayout>